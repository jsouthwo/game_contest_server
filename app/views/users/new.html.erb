<%= form_for @user do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password%>
    <br>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
    <br>

    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>

    <%= f.submit 'Create new account' %>
<% end %>
