<h1> Create a new player! </h1>

<%= form_for [@player.contest, @player] do |f| %>
    <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control'%>
    </div>

    <div class='form-group'>
        <%= f.label :description %>
        <%= f.text_field :description, 'form-control'%>
    </div>

    <div class='form-group'>
        <%= f.label :upload, 'Upload file' %>
        <%= f.file_field :upload %>
    </div>

    <%= f.submit 'Create Player', class: 'btn btn-primary' %>

<% end %>
