<h1> Create a new player! </h1>

<%# form_for [@player.contest, @player], html: { multipart: true } do |f| %>
<%= form_for [@player.contest, @player] do |f| %>
    <div class='form-group' >
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='form-group' >
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
    </div>

    <div class='form-group' >
        <%= f.label :downloadable, 'Allow others to download this player' %>
        <%= f.check_box :downloadable, checked: false %>
        <%# f.check_box :downloadable, checked: false, class: 'form-control' %>
    </div>

    <div class='form-group' >
        <%= f.label :playable, 'Allow others to compete against this player' %>
        <%= f.check_box :playable, checked: true %>
        <%# f.check_box :playable, checked: true, class: 'form-control' %>
    </div>

    <div class='form-group' >
        <%= f.label :upload, 'Upload file' %>
        <%= f.file_field :upload, class: 'form-control' %>
    </div>

    <%= f.submit 'Create Player', class: 'btn btn-primary' %>

<% end %>
