<h1> Sign in! </h1>

<%= form_tag sessions_path %>
<%= label_tag :username %>
<%= text_field_tag :username, params[:username], class: 'form-control' %>
<br>

<%= label_tag :password %>
<%= password_field_tag :password, params[:password], class: 'form-control' %>
<br>

<%= submit_tag 'Login', class: 'btn btn-primary' %>
